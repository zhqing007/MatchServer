<Window x:Class="WpfMatchClient2.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginWindow" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Height="260">
        <Label Content="登录名：" Height="28" HorizontalAlignment="Left" Margin="40,34,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="密码：" Height="28" HorizontalAlignment="Left" Margin="40,92,0,0" Name="label2" VerticalAlignment="Top" />
        <TextBox Height="26" HorizontalAlignment="Left" Margin="100,34,0,0" Name="nameBox" VerticalAlignment="Top" Width="136" />
        <TextBox Height="26" HorizontalAlignment="Left" Margin="100,92,0,0" Name="pwBox" VerticalAlignment="Top" Width="136" />
        <Button Content="登录" Height="23" HorizontalAlignment="Left" Margin="100,173,0,0" Name="loginButton" VerticalAlignment="Top" Width="75" Click="loginButton_Click" />
    </Grid>
</Window>
